[Unit]
Description=r/VeganCirclejerk Python Moderator
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /EXAMPLE/PATH/vcj-curator/moderator.py
Environment="REDDIT_CLIENT_ID=YOUR REDDIT CLIENT ID"
Environment="REDDIT_CLIENT_SECRET=YOUR REDDIT CLIENT SECRET"
Environment="REDDIT_USERNAME=YOUR REDDIT USERNAME"
Environment="REDDIT_PASSWORD=YOUR REDDIT PASSWORD"

[Install]
WantedBy=multi-user.target